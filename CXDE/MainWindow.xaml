                                        <ComboBoxItem Content="Billing Menu"/>
                                    </ComboBox>
                                    <Button Grid.Row="0" Grid.Column="2" x:Name="IVRCallButton" ToolTip="Send Call To IVR" HorizontalAlignment="Center" VerticalAlignment="Center" Width="35" Height="35">
